{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    <div class="h-screen max-h-full w-full flex flex-col">
        <nav class="p-3 w-full">
            <div class="navbar shadow-xl rounded-box">
                <div class="flex-1">
                    <a href="{{ path('dashboard.index') }}" class="btn btn-ghost normal-case text-xl">Gestionnaire de stockage</a>
                </div>
                <div class="flex-none">
                    <div class="dropdown dropdown-end">
                        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                            <div class="w-10 rounded-full">
                                <img src="{{ asset('img/profile_picture.png')}}" alt="Photo de profile" />
                            </div>
                        </label>
                        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                            <li>
                                <a class="justify-between">
                                    Profile
                                    <span class="badge">New</span>
                                </a>
                            </li>
                            <li><a>Settings</a></li>
                            <li><a href="{{ path('security.logout') }}">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <section class="p-5 w-full h-full">
            <div class="shadow-xl rounded-box bg-base w-full h-full overflow-y-scroll p-2 md:p-4 lg:p-10">
                <div class="text-sm breadcrumbs">
                    <ul>
                        {% if breadcrumbs is defined and breadcrumbs.paths is defined and breadcrumbs.page is defined %}

                            {% for path in breadcrumbs.paths %}
                                <li><a href="{{ path[1] }}">{{ path[0] }}</a></li>
                            {% endfor %}
                            <li>{{ breadcrumbs.page }}</li>

                            {% else %}

                                <li><a>None</a></li>
                                <li>None</li>

                        {% endif %}

                    </ul>
                </div>
                {% block content %}{% endblock %}
            </div>

        </section>
    </div>

{% endblock %}