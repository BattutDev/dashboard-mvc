{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    <div class="h-screen max-h-full w-full flex flex-col">
        <nav class="p-3 w-full">
            <div class="navbar shadow-xl rounded-box">
                <div class="flex-1">
                    <a class="btn btn-ghost normal-case text-xl">Gestionnaire de stockage</a>
                </div>
                <div class="flex-none">
                    <div class="dropdown dropdown-end">
                        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                            <div class="w-10 rounded-full">
                                <img src="{{ asset('img/profile_picture.png')}}" alt="Photo de profile" />
                            </div>
                        </label>
                        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                            <li>
                                <a class="justify-between">
                                    Profile
                                    <span class="badge">New</span>
                                </a>
                            </li>
                            <li><a>Settings</a></li>
                            <li><a href="{{ path('security.logout') }}">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <section class="p-3 w-full h-full">
            <div class="shadow-xl rounded-box bg-white dark:bg-base-100 w-full h-full overflow-y-scroll">
                {% block content %}{% endblock %}
            </div>

        </section>
    </div>

{% endblock %}